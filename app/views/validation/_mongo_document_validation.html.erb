/* LE08CANDIDATO */
db.runCommand({
	colmod: "LE08CANDIDATO",
	validator: {
		$and: [
		{ NROCAND: { $exists: true } },
		{ NOME: { $exists: true, $type: "string" } },
		{ APELIDO: { $type: "string" } },
		{ SIGLAPARTIDO: { $type: "string" } },
		{ $or: [
				{ $and: [
					{ TIPO: { $eq: "politico" }},
					{ SIGLAPARTIDO: { $exists: true } },
					{ CPF: { $exists: true }}
				]},
				{ $and: [
					{ TIPO: { $eq: "especial" }},
					{ SIGLAPARTIDO: { $exists: false }},
					{ CPF: { $exists: false }},
					{ IDADE: { $exists: false }},
					{ APELIDO: { $exists: false }}
				]}
			]
		}
		]
	}
});
/* LE09CARGO */
db.runCommand({
	colmod: "LE09CARGO",
	validator: {
		$and: [
		{ CODCARGO: { $exists: true } },
		{ POSSUIVICE: { $exists: true, $in: [0, 1] } },
		{ ANOBASE: { $exists: true } },
		{ ANOSMANDATO: { $exists: true } },
		{ NOMEDESCRITIVO: { $exists: true, $type: "string" } },
		{ ESFERA: { $exists: true, $in: ['E', 'F', 'M'] } },
		{ NOMECIDADE: { $type: "string" } },
		{ SIGLAESTADO: { $type: "string" } },
		{ $or: [
			{ $and: [
				{ ESFERA: { $eq: 'F' }},
				{ NOMECIDADE: { $exists: false }},
				{ SIGLAESTADO: { $exists: false }},
			]},
			{ $and: [
				{ ESFERA: { $eq: 'E' }},
				{ NOMECIDADE: { $exists: false }},
				{ SIGLAESTADO: { $exists: true }},
			]},
			{ $and: [
				{ ESFERA: { $eq: 'M' }},
				{ NOMECIDADE: { $exists: true }},
				{ SIGLAESTADO: { $exists: true }},
			]}
		]}
		]
	}
});
