<%= bootstrap_form_tag url: simple_table_for_path, method: :post do |f| %>

    <%= f.select(:table, options_for_select(@options), label: 'Selecione uma tabela do Oracle:') %>

    <%= f.form_group do %>
      <%= check_box_tag(:run) %>
      <%= f.label 'Criar coleção no MongoDB' %>
    <% end %>

    <%= f.primary :traduzir %>

<% end %>
